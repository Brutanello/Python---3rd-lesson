def div(*args):

    try:
        arg1 = int(input("Введите делимое "))
        arg2 = int(input("Введите делитель "))
        res = arg1 / arg2
    except ValueError:
        return 'Введено недопустимое число'
    except ZeroDivisionError:
        return "Правило математики: делить на ноль нельзя."

    return res

    '''
